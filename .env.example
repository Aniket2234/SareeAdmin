# Admin Panel MongoDB Configuration
ADMIN_MONGODB_URI=mongodb://localhost:27017/cloth_admin

# Authentication Secrets
SESSION_SECRET=your_secure_session_secret_here_min_32_chars
JWT_SECRET=your_jwt_secret_key_here

# Admin Credentials (optional - for initial setup)
ADMIN_EMAIL=admin@airavata.tech
ADMIN_PASSWORD=your_secure_password_here

# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection Settings
MONGODB_CONNECT_TIMEOUT=30000
MONGODB_SERVER_SELECTION_TIMEOUT=5000

# Application Settings
APP_NAME=Cloth Shop Admin Panel
APP_VERSION=1.0.0
DEVELOPER=Airavata Technologies

# Security Settings
BCRYPT_ROUNDS=12
SESSION_MAX_AGE=86400000

# IMPORTANT NOTES:
# 1. Copy this file to .env and update the values
# 2. Never commit .env to version control
# 3. Use only MongoDB - PostgreSQL support has been removed
# 4. Each shop will have its own MongoDB URI configured separately
# 5. Made by Airavata Technologies
